{{! template-lint-disable no-curly-component-invocation no-link-to-positional-params no-log no-implicit-this }}
    <div class="site-wrapper">

        <Header @background={{this.blog.coverImage}}>
            <div class="inner">
                <nav class="site-nav-center">
                    {{#if this.blog.logo}}
                        <LinkTo @route="index" class="site-nav-logo"><img src={{this.blog.logo}} alt={{this.blog.title}} /></LinkTo>
                    {{else}}
                        <LinkTo @route="index" class="site-nav-logo">{{this.blog.title}}</LinkTo>
                    {{/if}}
                </nav>
            </div>
        </Header>

        <main id="site-main" class="site-main outer">
            <div class="inner">

                <section class="error-message">
                    <h1 class="error-code">{{this.error.status}}</h1>
                    <p class="error-description">{{this.error.title}}</p>
                    <LinkTo @route="index" class="error-link">Go to the front page â†’</LinkTo>
                </section>
            </div>
        </main>

        {{#get "posts" limit="3"}}
        <aside class="outer">
            <div class="inner">
                <div class="post-feed">
                    {{#each posts as |post|}}
                        <PostCard @post={{post}} />
                    {{/each}}
                </div>
            </div>
        </aside>
        {{/get}}

    </div>